<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eoe.usingbc.MainActivity"
    >
    <Button 
        android:id="@+id/btnSendBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendbroadcast"
        />
    <Button
        android:id="@+id/btnRegBCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reg_broadcastreveiver"
        />
    <Button
        android:id="@+id/btnUnRegBCR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/un_reg_broadcastreveiver"
        />
        
</LinearLayout>
